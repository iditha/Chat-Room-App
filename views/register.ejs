<%- include('includes/head.ejs') %>

<div class="container d-flex justify-content-center">
  <div class="text-center w-50">
    <img src="/images/logo.png" alt="logo" />
    <h1 class="mb-3">Please Register</h1>
    <% if (error) { %>
      <h5 class="col-12 text-danger text-center mb-3" id="error-message"><%- error %></h5>
    <% } %>

    <form id="registerForm" action="/register" method="POST" class="mb-3" novalidate>
      <div class="form-floating mb-2">
        <input type="email" class="form-control" id="floatingInput" name="email" placeholder="name@example.com"
               required pattern="^[^\s@]+@[^\s@]+\.[^\s@]+$">
        <label for="floatingInput">Email address</label>
        <div class="invalid-feedback">Please provide a valid email address.</div>
      </div>
      <div class="form-floating mb-2">
        <input type="text" class="form-control" id="floatingFirstName" name="firstName" placeholder="First Name"
               required pattern="[A-Za-z]{3,32}">
        <label for="floatingFirstName">First Name</label>
        <div class="invalid-feedback">First Name must be 3-32 letters and contain only letters (A-Z, a-z).</div>
      </div>
      <div class="form-floating mb-2">
        <input type="text" class="form-control" id="floatingLastName" name="lastName" placeholder="Last Name"
               required pattern="[A-Za-z]{3,32}">
        <label for="floatingLastName">Last Name</label>
        <div class="invalid-feedback">Last Name must be 3-32 letters and contain only letters (A-Z, a-z).</div>
      </div>

      <button type="submit" class="btn btn-primary form-control">Next</button>
    </form>
    <p>Already registered? go to <a href="/">login</a> page</p>
  </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
<script src="/javascripts/formValidation.js"></script>
</body>
</html>
