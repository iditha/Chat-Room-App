<%- include('includes/head.ejs') %>

<%- include('includes/navbar.ejs') %>


<img src="images/loading-buffering.gif" alt="loading wheel" id="loading" class="position-absolute top-50 start-50 translate-middle">

<div class="container">
    <h2 class="ms-3 mt-5 text-center">Welcome <%= firstName %> !</h2>
    <h2 class="row justify-content-center mt-3"><%= message %></h2>
    <form id="customForm" class="row justify-content-center mt-4 pt-4 pb-2 rounded bg-light border border-2 fw-semibold">
        <div class="field col-12 text-center">
            <label for="searchByTextInput" class="fw-bolder mb-2">Search message by Text:</label>
            <div class="control">
                <input type="text" id="searchByTextInput" name="searchInput" class="form-control" placeholder="Enter keyword...">
                <small id="searchError" class="text-danger mt-2" style="display: none;"></small>
            </div>
        </div>
        <div class="field mt-3 col-12 text-center">
            <div class="control">
                <button id="searchByText" class="btn btn-primary mt-2" type="submit">Search</button>
            </div>
        </div>
        <div class="field mt-3 col-12 text-center">
            <div class="control">
                <a id="clearSearch" class="btn btn-secondary mb-1 d-none" href="/">Clear search</a>
            </div>
        </div>
    </form>

    <h5 class="row text-danger text-center mt-3" id="errorMessage"></h5>

    <div id="data" class="row row-cols-1 row-cols-md-3 g-4 mt-4 mb-4"></div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</body>
</html>
