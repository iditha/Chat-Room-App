<%- include('includes/head.ejs') %>
<%- include('includes/navbar.ejs') %>

<div class="container mt-4">
    <form action="/message/add" method="post" id="customForm" class="row justify-content-center mt-5 pt-3 pb-2 mb-4 rounded bg-light border border-2 fw-semibold">
        <div class="field col-12 text-center">
            <label for="messageText" class="fw-bolder mb-2">Message Text</label>
            <div class="control">
                <textarea id="messageText" class="form-control mb-1" name="messageText" rows="4" cols="50" maxlength="200"></textarea>
                <small id="messageError" class="text-danger mt-2" style="display: none;"></small>
            </div>
        </div>
        <div class="field mb-1 col-12 text-center">
            <div class="control">
                <button id="saveMessageButton" class="btn btn-primary mt-2" type="submit">Post message</button>
            </div>
        </div>
        <h2 class="ms-3 mt-3"><%= error %></h2>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</body>
</html>
